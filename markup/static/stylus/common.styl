// Common styles of the project

@import url('https://fonts.googleapis.com/css?family=Roboto:700,900');

html, body
    height 100%
    font-family "Roboto", sans-serif

// .page
//     // Стили для body

.page__wrapper
    min-height 100%
    margin-bottom -50px
    position relative


* html .page__wrapper
    height 100%

.container
    width 1170px
    margin auto

h1
    font-size 62px
    font-weight 900
    margin 0
    color #fff
    margin-bottom 40px
    text-transform uppercase

.button
    background-color #ca2c1d
    border none
    outline none
    color #fff
    font-size 28px
    font-weight 700
    width 400px
    height 92px
    display flex
    align-items center
    justify-content center
    transition .2s ease all
    &:hover
        background-color #db2615
    &_is_off
        background-color #868786
        &:hover
            background-color #999999
    &__icon
        margin-right 20px
        img
            vertical-align top

.page-header
    position absolute
    top 0
    left 0
    width 100%
    height 120px
    background-color rgba(#fff, 85%)
    display flex
    align-items center
    z-index 1

.main
    height 100vh
    display flex
    align-items center
    position relative
    max-width 100%

.main-content
    z-index 1

.background-media
    position absolute
    left 0
    top 0
    display flex
    align-items flex-end
    justify-content center
    overflow hidden
    height 100vh
    max-width 100%
    z-index -1
    &__image
        display none

